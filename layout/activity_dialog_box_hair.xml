<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="361dp"
        android:layout_height="469dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.385">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="307dp"
            android:layout_height="403dp"
            android:layout_gravity="fill"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.247"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="431dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.484"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.505"
                app:srcCompat="@drawable/mensaje3" />

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_width="254dp"
                android:layout_height="40dp"
                android:background="@null"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.247"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btnLargo"
                    android:layout_width="253dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:drawableEnd="@android:drawable/ic_menu_send"
                    android:text="¿Tiene el pelo largo?" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="60dp"
                android:layout_marginLeft="30dp"
                android:layout_width="254dp"
                android:layout_height="40dp"
                android:background="@null"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.247"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btnCorto"
                    android:layout_width="253dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:drawableEnd="@android:drawable/ic_menu_send"
                    android:text="¿Tiene el pelo corto?" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="110dp"
                android:layout_marginLeft="30dp"
                android:layout_width="254dp"
                android:layout_height="40dp"
                android:background="@null"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.247"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btnBarba"
                    android:layout_width="253dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:drawableEnd="@android:drawable/ic_menu_send"
                    android:text="¿Tiene Barba?" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="160dp"
                android:layout_marginLeft="30dp"
                android:layout_width="254dp"
                android:layout_height="40dp"
                android:background="@null"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.247"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btnBigote"
                    android:layout_width="253dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:drawableEnd="@android:drawable/ic_menu_send"
                    android:text="¿Tiene Bigote?" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="210dp"
                android:layout_marginLeft="30dp"
                android:layout_width="254dp"
                android:layout_height="40dp"
                android:background="@null"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.247"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btnCalvo"
                    android:layout_width="253dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:drawableEnd="@android:drawable/ic_menu_send"
                    android:text="¿Es Calvo?" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="260dp"
                android:layout_marginLeft="30dp"
                android:layout_width="254dp"
                android:layout_height="40dp"
                android:background="@null"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.247"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btnPeloNegro"
                    android:layout_width="253dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:drawableEnd="@android:drawable/ic_menu_send"
                    android:text="¿Tiene el pelo negro?" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="310dp"
                android:layout_marginLeft="30dp"
                android:layout_width="254dp"
                android:layout_height="40dp"
                android:background="@null"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.247"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btnRubio"
                    android:layout_width="253dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:drawableEnd="@android:drawable/ic_menu_send"
                    android:text="¿Tiene el pelo rubio?" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="fill"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.247"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintVertical_bias="1.0">

            <ImageView
                android:id="@+id/aceptar"
                android:layout_width="79dp"
                android:layout_height="79dp"
                app:srcCompat="@drawable/aceptar"
                tools:ignore="MissingConstraints" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="fill"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.69"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintVertical_bias="1.0">

            <ImageView
                android:id="@+id/cancelar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/cancelar" />
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_waitroom"
    tools:context=".EnterRoom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/txtNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text=" Octopus2000"
            android:textColor="@color/greenNN"
            android:textSize="18dp"
            android:textStyle="bold"
            android:drawableTint="@color/gray"
            android:drawableLeft="@drawable/ic_user"/>

        <TextView android:id="@+id/txtWins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="8 W"
            android:textColor="@color/yellowWin"
            android:textSize="18dp"
            android:textStyle="bold"
            android:drawableTint="@color/yellowWin"
            android:drawableLeft="@drawable/ic_wins"/>

        <TextView android:id="@+id/txtLoses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="5 L"
            android:textColor="@color/redLose"
            android:textSize="18dp"
            android:textStyle="bold"
            android:drawableTint="@color/redLose"
            android:drawableLeft="@drawable/ic_loses"/>

        <TextView android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="140 Points"
            android:textColor="@color/blueScore"
            android:textSize="18dp"
            android:textStyle="bold"
            android:drawableTint="@color/blueScore"
            android:drawableLeft="@drawable/ic_points"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/str_roomID2"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@color/gradient_start" />

        <EditText
            android:id="@+id/txtRoomID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/gradient_start"
            android:drawableEnd="@drawable/ic_room"
            android:drawableTint="@color/gradient_start"
            android:hint="@string/str_roomID"
            android:maxLength="10"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray" />

        <Button
            android:id="@+id/btnEnterRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            android:text="@string/str_enterRoom"
            android:background="@drawable/button_rounded"/>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:text="@string/str_back"
            android:background="@drawable/button_rounded"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/txtNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text=" Octopus2000"
            android:textColor="@color/greenNN"
            android:textSize="18dp"
            android:textStyle="bold"
            android:drawableTint="@color/gray"
            android:drawableLeft="@drawable/ic_user"/>

        <TextView android:id="@+id/txtWins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="8 W"
            android:textColor="@color/yellowWin"
            android:textSize="18dp"
            android:textStyle="bold"
            android:drawableTint="@color/yellowWin"
            android:drawableLeft="@drawable/ic_wins"/>

        <TextView android:id="@+id/txtLoses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="5 L"
            android:textColor="@color/redLose"
            android:textSize="18dp"
            android:textStyle="bold"
            android:drawableTint="@color/redLose"
            android:drawableLeft="@drawable/ic_loses"/>

        <TextView android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="140 Points"
            android:textColor="@color/blueScore"
            android:textSize="18dp"
            android:textStyle="bold"
            android:drawableTint="@color/blueScore"
            android:drawableLeft="@drawable/ic_points"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="390dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/who_guess_title" />

        <Button
            android:id="@+id/btnPlayPVP"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:text="@string/str_playPVP"
            android:textSize="25dp"
            android:background="@drawable/button_rounded2" />

        <Button
            android:id="@+id/btnEnterRoom"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:text="@string/str_enterroom"
            android:textSize="25dp"
            android:background="@drawable/button_rounded2" />

        <Button
            android:id="@+id/btnPlayAI"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="@string/str_playAI"
            android:textSize="25dp"
            android:background="@drawable/button_rounded2"/>

        <Button
            android:id="@+id/btnHelp"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="@string/str_help"
            android:textSize="25dp"
            android:background="@drawable/button_rounded2"/>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="@string/str_exit"
            android:textSize="25dp"
            android:background="@drawable/button_rounded2"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
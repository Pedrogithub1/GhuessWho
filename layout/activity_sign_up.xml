<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUp">

    <LinearLayout android:id="@+id/viewRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView android:id="@+id/txtRegister"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/str_register"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/gradient_start"
            android:drawableEnd="@drawable/ic_signup"
            android:drawableTint="@color/gradient_start" />

        <ImageView
            android:layout_width="390dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/who_guess_title" />

        <EditText
            android:id="@+id/txtRegNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="@string/str_nickname"
            android:inputType="text"
            android:textAlignment="center"
            android:textColorHint="@color/gray"
            android:textColor="@color/gray"
            android:backgroundTint="@color/gradient_start"
            android:drawableEnd="@drawable/ic_user"
            android:drawableTint="@color/gradient_start"/>

        <EditText
            android:id="@+id/txtRegEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="@string/str_email"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColorHint="@color/gray"
            android:textColor="@color/gray"
            android:backgroundTint="@color/gradient_start"
            android:drawableEnd="@drawable/ic_email"
            android:drawableTint="@color/gradient_start"/>

        <EditText
            android:id="@+id/txtRegPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="@string/str_password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:maxLength="20"
            android:textColorHint="@color/gray"
            android:textColor="@color/gray"
            android:backgroundTint="@color/gradient_start"
            android:drawableEnd="@drawable/ic_password"
            android:drawableTint="@color/gradient_start" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:text="@string/str_register"
            android:background="@drawable/button_rounded"/>

        <Button
            android:id="@+id/btnRegisterToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:text="@string/str_login"
            android:background="@drawable/button_rounded" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>